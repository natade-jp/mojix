{
	"env": {
		"browser": true,
		"es2022": true,
		"node": true,
		"jest/globals": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double", { "avoidEscape": true }],
		"semi": ["error", "always"],
		"comma-dangle": ["error", "never"],
		"no-constant-condition": 1,
		"no-unused-vars": 1,
		"no-console": 1,
		"no-var": 2,
		"prefer-const": 2
	},
	"plugins": ["jest"]
}
