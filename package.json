{
	"name": "mojix",
	"version": "0.0.1",
	"description": "Moji / Kanji / Unicode analysis utilities (work in progress)",
	"author": "natade-jp <natade3@gmail.com> (https://github.com/natade-jp)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/natade-jp/mojix.git"
	},
	"license": "MIT",
	"source": "./src/mojix.js",
	"types": "./build/type/mojix.d.ts",
	"main": "./build/esm/mojix.js",
	"keywords": [],
	"exports": {
		".": {
			"browser": "./build/umd/mojix.js",
			"umd": "./build/umd/mojix.js",
			"import": "./build/esm/mojix.js",
			"require": "./build/cjs/mojix.js"
		}
	},
	"type": "module",
	"scripts": {
		"build": "node ./scripts/package.build.js",
		"test": "jest",
		"test_target": "node ./scripts/package.test.js",
		"doc": "node ./scripts/package.doc.js",
		"type": "node ./scripts/package.type.js"
	},
	"directories": {
		"src": "./src",
		"build": "./build"
	},
	"bugs": {
		"url": "https://github.com/natade-jp/mojix/issues"
	},
	"jest": {
		"verbose": true,
		"rootDir": "./src",
		"moduleFileExtensions": [
			"js",
			"mjs"
		],
		"testMatch": [
			"**/__tests__/**/*.?(m)js?(x)",
			"**/?(*.)(spec|test).?(m)js?(x)"
		],
		"transform": {
			"^.+\\.(js|mjs)$": "babel-jest"
		}
	},
	"babel": {
		"env": {
			"test": {
				"plugins": [
					"transform-es2015-modules-commonjs"
				]
			}
		}
	},
	"homepage": "https://github.com/natade-jp/mojix",
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@rollup/plugin-buble": "^1.0.2",
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-node-resolve": "^16.0.2",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/jest": "^29.5.4",
		"@types/node": "^24.7.1",
		"babel-jest": "^29.6.4",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"baseline-browser-mapping": "^2.9.17",
		"esdoc": "^1.1.0",
		"esdoc-standard-plugin": "^1.0.0",
		"eslint": "^9.37.0",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^17.1.0",
		"jest": "^29.6.4",
		"ntfile": "^1.0.0",
		"rollup": "^3.29.5",
		"typescript": "^5.9.3"
	}
}
